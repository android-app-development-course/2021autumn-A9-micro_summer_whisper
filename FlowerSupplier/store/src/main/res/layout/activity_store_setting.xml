<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreSettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/store_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/store_setting_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            con1-->
            <com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_setting_con1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_setting_name_a"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    android:text="店铺名称"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_setting_name_b"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/store_setting_name_c"
                    android:text="右右"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right"
                    android:id="@+id/store_setting_name_c"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/store_setting_name_b"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/store_setting_line_1"
                    />

            </com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout>

<!--            con2-->
            <com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_setting_con2"
                app:layout_constraintTop_toBottomOf="@id/store_setting_con1"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_setting_head_image_a"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/store_setting_line_1"
                    android:layout_marginLeft="10dp"
                    android:text="店铺头像"/>

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:qmui_corner_radius="10dp"
                    android:id="@+id/store_setting_head_image_b"
                    android:src="@drawable/picture"
                    app:layout_constraintTop_toBottomOf="@id/store_setting_line_1"
                    android:layout_marginRight="25dp"
                    app:layout_constraintRight_toRightOf="parent"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right"
                    android:id="@+id/store_setting_head_image_c"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/store_setting_line_1"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/store_setting_head_image_b"
                    android:id="@+id/store_setting_line_2"
                    />

            </com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout>

            <!--            con3-->
            <com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_setting_con3"
                app:layout_constraintTop_toBottomOf="@id/store_setting_con2"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_setting_address_a"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    android:text="店铺地址"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_setting_address_b"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/store_setting_address_c"
                    android:text="右右"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/right"
                    android:id="@+id/store_setting_address_c"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/store_setting_address_c"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/store_setting_line_3"
                    />

            </com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout>





        </com.micro_summer_whisper.flower_supplier.common.QMUIRoundConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>