<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/good_title"
        app:qmui_corner_radius="5dp"
        android:id="@+id/good_cover_image"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/good_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="titledsfsdfsdfsdfsdfsdfdtitledsfsdfsdfsdfsdfsdfdtitledsfsdfsdfsdfsdfsdfdtitledsfsdfsdfsdfsdfsdfdtitledsfsdfsdfsdfsdfsdfdtitledsfsdfsdfsdfsdfsdfd"
        android:maxLength="30"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/good_cover_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/good_price"
        android:text="price"
        android:layout_marginLeft="20dp"
        android:maxLength="30"
        app:layout_constraintLeft_toRightOf="@id/good_cover_image"
        app:layout_constraintTop_toBottomOf="@id/good_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/good_price_unit_text"
        android:text="￥"
        app:layout_constraintLeft_toRightOf="@id/good_price"
        app:layout_constraintTop_toBottomOf="@id/good_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/good_stock_only_text"
        android:text="库存: "
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/good_price_unit_text"
        app:layout_constraintTop_toBottomOf="@id/good_title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/good_stock"
        android:text="100"
        android:maxLength="30"
        app:layout_constraintLeft_toRightOf="@id/good_stock_only_text"
        app:layout_constraintTop_toBottomOf="@id/good_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>