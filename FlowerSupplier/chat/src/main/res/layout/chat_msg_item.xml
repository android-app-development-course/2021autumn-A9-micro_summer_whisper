<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/chat_msg_head_image"
        android:background="@android:color/black"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/chat_msg_head_image"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/chat_msg_title"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="dfsdfdsf"
        android:maxLength="20"
        android:textColor="#363739"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chat_msg_head_image"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxLines="1"
        android:id="@+id/chat_msg_short_content"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:maxLength="30"
        android:textColor="@color/gray"
        android:text="3423423423423"
        app:layout_constraintTop_toBottomOf="@id/chat_msg_title"
        app:layout_constraintLeft_toRightOf="@id/chat_msg_head_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>


