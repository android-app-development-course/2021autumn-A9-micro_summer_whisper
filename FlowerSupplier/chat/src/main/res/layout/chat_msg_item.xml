<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/chat_msg_head_image"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/chat_chat_msg_item_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        app:qmui_corner_radius="5dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/chat_msg_title"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="dfsdfdsf"
        android:maxLength="20"
        android:textColor="#363739"
        app:layout_constraintBottom_toTopOf="@id/chat_msg_short_content"
        app:layout_constraintLeft_toRightOf="@id/chat_msg_head_image"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxLines="1"
        android:id="@+id/chat_msg_short_content"
        android:layout_marginStart="40dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:maxLength="30"
        android:textColor="@color/gray"
        android:text="3423423423423"
        app:layout_constraintLeft_toRightOf="@id/chat_msg_head_image"
        app:layout_constraintBottom_toTopOf="@id/chat_chat_msg_item_line"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/chat_chat_msg_item_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray"

        />


</androidx.constraintlayout.widget.ConstraintLayout>


