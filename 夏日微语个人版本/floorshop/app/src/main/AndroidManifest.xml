<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="floor_shop">

    <!-- Load images from Unsplash -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jetsnack"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name="floor_shop.ui.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_first"
            android:theme="@style/Theme.Jetsnack.NoActionBar" />
        <activity
            android:name="floor_shop.activity.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Jetsnack.NoActionBar" />
        <activity
            android:name="floor_shop.activity.FirstActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Jetsnack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>